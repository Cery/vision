# 开发环境配置示例
# 复制此文件为 .env 并填入实际值

# Hugo 配置
HUGO_ENV=development
HUGO_VERSION=0.148.0

# 服务器端口
HUGO_PORT=1313
CMS_PORT=8081
PRODUCT_SERVER_PORT=3002

# 网站配置
SITE_URL=http://localhost:1313
BASE_URL=http://localhost:1313

# 图片处理配置
IMAGE_QUALITY=85
IMAGE_FORMATS=webp,jpg,png
PLACEHOLDER_SERVICE=local

# CMS 配置
CMS_BACKEND=git-gateway
CMS_BRANCH=main
CMS_REPO=Cery/vision

# 数据库配置（如果需要）
# DATABASE_URL=
# DATABASE_TYPE=

# API 配置
# API_KEY=
# API_SECRET=

# 部署配置
NETLIFY_SITE_ID=
NETLIFY_AUTH_TOKEN=

# 开发工具
DEBUG=false
LOG_LEVEL=info

# 编码配置
LC_ALL=zh_CN.UTF-8
LANG=zh_CN.UTF-8
